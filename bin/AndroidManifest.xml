<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.graeme.workoutscheduler"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="19" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.graeme.workoutscheduler.Homepage"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.graeme.workoutscheduler.FollowWorkout"
            android:label="@string/title_activity_follow_workout" >
        </activity>
        <activity
            android:name="com.graeme.workoutscheduler.SeeWorkouts"
            android:label="@string/title_activity_see_workouts" >
        </activity>
        <activity
            android:name="com.graeme.workoutscheduler.EditWorkout"
            android:label="@string/title_activity_edit_workout" >
        </activity>
        <activity
            android:name="com.graeme.workoutscheduler.SubmitWorkout"
            android:label="@string/title_activity_submit_workout" >
        </activity>
        <activity
            android:name="com.graeme.workoutscheduler.AddExercise"
            android:label="@string/title_activity_add_exercise" >
        </activity>
        <activity
            android:name="com.graeme.workoutscheduler.RejectWorkout"
            android:label="@string/title_activity_reject_workout" >
        </activity>
        <activity
            android:name="com.graeme.workoutscheduler.SelectWorkout"
            android:label="@string/title_activity_select_workout" >
        </activity>
        <activity
            android:name="com.graeme.workoutscheduler.RemoveWorkout"
            android:label="@string/title_activity_remove_workout" >
        </activity>
        <activity
            android:name="com.graeme.workoutscheduler.EditExercise"
            android:label="@string/title_activity_edit_exercise" >
        </activity>
    </application>

</manifest>
